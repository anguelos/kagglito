<p id="notice"><%= notice %></p>

<p>
  <b>Name:</b>
  <%= @competition.name %>
</p>

<p>
  <b>Description:</b>
  <%= @competition.description %>
</p>

<p>
  <b>Starttime:</b>
  <%= @competition.starttime %>
</p>

<p>
  <b>Endtime:</b>
  <%= @competition.endtime %>
</p>

<p>
  <b>Publish score interactively:</b>
  <%= @competition.publicscore %>
</p>

<p>

<b>Dataset:</b>
<%=Dataset.find(@competition.Dataset_id).name %>
</p>

<p>
<b>Evaluator:</b>
<%=Evaluator.find(@competition.Evaluator_id).name %>
</p>


<p>
<b>Host:</b>
<%=User.find(@competition.User_id).email.split('@')[0] %>
</p>

<% if current_user.id == @competition.User_id %>
<%= link_to 'Edit', edit_competition_path(@competition) %> |
<% end %>

<%= link_to 'Back', competitions_path %>
